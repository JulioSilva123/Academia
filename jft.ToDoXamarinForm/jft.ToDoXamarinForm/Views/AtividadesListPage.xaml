            </Grid.ColumnDefinitions>
            <Label Text="Cod." TextColor="Black" FontAttributes="Bold" Grid.Column="0" />
            <Label Text="Tipo"  TextColor="Black" FontAttributes="Bold" Grid.Column="1" />
