                               HorizontalOptions="StartAndExpand" 
                               LineBreakMode="NoWrap" 
                                Style="{DynamicResource ListItemTextStyle}" 
                               TextColor="Black"
                                FontSize="16"/>-->
                        <Label Grid.Column="2" Text="{Binding nm_atividade}"
                               VerticalTextAlignment="Center"
                               HorizontalOptions="StartAndExpand" 
                               LineBreakMode="WordWrap" 
                                Style="{DynamicResource ListItemTextStyle}" 
